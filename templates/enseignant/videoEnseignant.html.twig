{% extends 'base.html.twig' %}

{% block title %}produits{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{asset('css/comment.css')}}">
{% endblock %}
{% block body %}
</br></br>
<div class="row mb-6">
    <div class="col-md-8">
        <video width="620" height="340" controls>
            <source src="/uploads/{{fich.fichier}}" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <h1 class="mt-3">{{fich.nomFichier}}</h1>
        <a href='/uploads/{{fich.fichier}}'>Telecharger</a>
        <h2>Commentaire:</h2>
        {{form_start(formComment)}}
              <div class="form-group">
                     {{form_widget(formComment.commentaire,{'attr':{'class':"form-control"}})}}
                </div>
              <button type="submit" class="btn btn-primary">
                publier
              </button>
        {{form_end(formComment)}}
    </div>    
    <div class="col-md-4 border over">
            {%for comment in fich.Comments%}
            <div class="container">
             <h5 class="use"><i>{{user.nom}}{{comment.createdAt|date('d/m/y')}}:</i></h5><small>{{comment.commentaire}}</small>
             </br></br>
            </div> 
         {% endfor %}
    </div>
</div>
{% endblock %}


