{% extends 'base2.html.twig' %}

{% block title %}Nouveau produit{% endblock %}

{% block body %}
  <h2>Creation d'une nouvelle matiere</h2>
  {{form_start(formMatiere)}}
        <div class="form-row">
            <div class="form-group col-md-6">
            <label>Nom de la formation</label>
            {{form_widget(formMatiere.NomMat,{'attr':{'class':"form-control"}}) }}
            </div>
            <div class="form-group col-md-6">
            <label for="">Prix de la formation</label>
            {{form_widget(formMatiere.PrixMat,{'attr':{'class':"form-control"}})}}
            </div>
        </div>
        <div class="form-group">
        <label for="inputAddress">Image qui va representer la Formation</label>
        {{form_widget(formMatiere.ImgMat,{'attr':{'class':"form-control"}})}}
        </div>
        <div class="form-group">
          <label for="inputAddress">Catégorie:</label>
          {{form_widget(formMatiere.Categorie,{'attr':{'class':"form-control"}})}}
        </div>
        <div class="form-group">
          <label for="inputAddress">Cette matière est enseignée par:</label>
          {{form_widget(formMatiere.Enseigner,{'attr':{'class':"form-control"}})}}
        </div>
        <div class="form-group">
            <label for="inputAddress">Détail:</label>
            {{form_widget(formMatiere.DetailMat,{'attr':{'class':"form-control"}})}}
        </div>
        <button type="submit" class="btn btn-primary">
          {% if Modifier %}
              Modifier Le contenu
          {%else%}
              Publier
          {% endif %}
        </button>
  {{form_end(formMatiere)}}
{% endblock %}